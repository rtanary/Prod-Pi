{
  "name": "Prod-Pie",
  "version": "2.1",
  "description": "Manage your day with useful graphs on your online activities",
  "manifest_version": 2,
  "icons": {
    "19": "main.png"
    
  },
  "background": {
    "persistent": true,
    "scripts": ["script.js", "pie.js"]
  },
  "permissions": ["activeTab", "tabs"],
  "browser_action": {
    "default_icon": {
      "19": "main.png"
      
    },
    "default_popup": "popup.html"
  },

  
   "chrome_url_overrides" : {
      "newtab": "index.html"
   }
}